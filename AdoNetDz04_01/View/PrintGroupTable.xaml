<Page x:Class="AdoNetDz04_01.View.PrintGroupTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdoNetDz04_01.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="510"
      Title="PrintGroupTable">

    <Grid Margin="10,10,10,50">
        <ListView x:Name="GroupList">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="GroupId" DisplayMemberBinding="{Binding Path=GroupId}"/>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
